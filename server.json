{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-07-09/server.schema.json",
  "name": "io.github.msaid/autoplans-mcp",
  "description": "MCP Server for Autoplans.dev - AI-powered project planning and task management tools with 14+ tools for projects, tasks, business plans, and branding",
  "status": "active",
  "repository": {
    "url": "https://github.com/msaid/autoplans-mcp",
    "source": "github"
  },
  "version": "0.1.0",
  "packages": [
    {
      "registry_type": "http",
      "registry_base_url": "https://autoplans.dev/api/v1/mcp",
      "identifier": "autoplans-mcp",
      "version": "0.1.0",
      "transport": {
        "type": "http",
        "base_url": "https://autoplans.dev/api/v1/mcp",
        "headers": {
          "Authorization": "Bearer ${AUTOPLANS_API_KEY}"
        }
      },
      "environment_variables": [
        {
          "name": "AUTOPLANS_API_KEY",
          "description": "API key for Autoplans.dev service. Get yours at https://autoplans.dev",
          "required": true
        }
      ]
    }
  ],
  "capabilities": {
    "tools": true,
    "resources": false,
    "prompts": false
  },
  "keywords": ["project-management", "ai-planning", "task-management", "business-plan", "branding", "autoplans", "github-integration"]
}