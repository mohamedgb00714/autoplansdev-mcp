{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.msaid/autoplans-mcp",
  "description": "AI-powered project planning tools for Autoplans.dev with 14+ MCP tools",
  "repository": {
    "url": "https://github.com/msaid/autoplans-mcp",
    "source": "github"
  },
  "version": "0.1.0",
  "packages": [
    {
      "registryType": "github",
      "identifier": "msaid/autoplans-mcp",
      "version": "0.1.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "AUTOPLANS_API_KEY",
          "description": "API key for Autoplans.dev service. Get yours at https://autoplans.dev",
          "isRequired": true
        }
      ]
    }
  ],
  "capabilities": {
    "tools": true,
    "resources": false,
    "prompts": false
  },
  "keywords": ["project-management", "ai-planning", "task-management", "business-plan", "branding", "autoplans", "github-integration"]
}